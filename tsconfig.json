{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    // Type Checking
    "strict": true,

    // Modules
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,

    // Emit
    "outDir": "build",

    // JavaScript Support
    "allowJs": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Language and Environment
    "lib": ["es2023"],
    "target": "es2022",

    // Completeness
    "skipLibCheck": true
  }
}
